<plugin name='runtime-logging' version='0.4' grailsVersion='1.3 &gt; *'>
  <author>Jason Morris</author>
  <authorEmail>jason.morris@torusit.com</authorEmail>
  <title>Grails Runtime Logging Plugin</title>
  <description>Allows you to change the logging characteristics (e.g. Level) for common parts of a Grails application at runtime without the need to restart.</description>
  <documentation>http://grails.org/plugin/runtime-logging</documentation>
  <type>RuntimeLoggingGrailsPlugin</type>
  <resources>
    <resource>grails.plugin.runtimelogging.RuntimeLoggingController</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies />
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>